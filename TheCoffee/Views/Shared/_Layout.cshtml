<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/mycss/mystyle.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("CustomerHome", "Home", new { area = "" })">
                <i class="fas fa-coffee text-warning me-2 fs-4"></i>
                <span class="fw-bold">The Coffee</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active fw-medium" href="@Url.Action("CustomerHome", "Home", new { area = "" })">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium" href="#about">Về chúng tôi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium" href="#contact">Liên hệ</a>
                    </li>
                </ul>


                <div class="d-flex align-items-center" style="gap:15px">
                    <!-- Shopping Cart -->
                    <button class="btn btn-outline-warning position-relative me-2" onclick="showCart()">
                        <i class="fas fa-shopping-cart"></i>
                        <span id="cartBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                    </button>


                    <!-- Dropdown User -->
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-2"></i> User
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Account", new { area = "" })"><i class="fas fa-user me-2"></i> Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "CustomerOrder", new { area = "" })"><i class="fa-solid fa-bars"></i> Đơn hàng</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Account", new { area = "" })"><i class="fas fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
                        </ul>
                    </div>





                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>
    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-4 mb-3">
                    <h5 class="text-warning mb-2">The Coffee Web</h5>
                    <p class="small text-muted">Trải nghiệm cà phê đích thực trong không gian ấm cúng.</p>
                    <div class="d-flex justify-content-center justify-content-md-start gap-3 mt-2">
                        <a href="#" class="text-muted"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase mb-2">Liên kết</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none">Trang chủ</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Sản phẩm</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Về chúng tôi</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase mb-2">Liên hệ</h6>
                    <p class="small text-muted mb-1"><i class="fas fa-map-marker-alt me-2 text-warning"></i>123 Nguyễn Huệ, Q1, TP.HCM</p>
                    <p class="small text-muted mb-1"><i class="fas fa-phone me-2 text-warning"></i>(028) 1234 5678</p>
                    <p class="small text-muted"><i class="fas fa-envelope me-2 text-warning"></i>info@coffeehouse.vn</p>
                </div>
            </div>

            <hr class="my-3 border-light">
            <p class="text-center small text-muted mb-0">© 2024 Coffee House. All rights reserved.</p>
        </div>
    </footer>
    <style>
        footer p, footer ul li a, footer .text-muted {
            color: #ccc !important;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Content/myjs/customer.js")"></script>
    @RenderSection("Scripts", required: false)



</body>
</html>
