@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffee House - Cà Phê Ngon Nhất Thành Phố</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/mycss/mystyle.css" rel="stylesheet" />
</head>
<body>


    <!-- Hero Section -->
    <section class="hero-section" id="home">
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="row min-vh-100 align-items-center">
                <div class="col-lg-8 mx-auto text-center text-white">
                    <h1 class="display-1 fw-bold mb-4">
                        Chào Mừng Đến Với
                        <span class="text-warning d-block">The Coffee</span>
                    </h1>
                    <p class="lead mb-5">Nơi hương vị cà phê đích thực gặp gỡ không gian ấm cúng</p>

                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="py-5 bg-light" id="menu">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-4 fw-bold mb-3">Sản Phẩm Nổi Bật</h2>
                <p class="lead text-muted">Những ly cà phê được yêu thích nhất</p>
            </div>

            <!-- Category Filter -->
            <div class="text-center mb-5">
                <div class="btn-group-vertical btn-group-sm d-block d-md-none" role="group">
                    <button type="button" class="btn btn-warning category-btn active mb-2" onclick="filterMenu('all')">Tất cả</button>
                    <button type="button" class="btn btn-outline-warning category-btn mb-2" onclick="filterMenu('coffee')">Cà phê</button>
                    <button type="button" class="btn btn-outline-warning category-btn mb-2" onclick="filterMenu('tea')">Trà</button>
                    <button type="button" class="btn btn-outline-warning category-btn mb-2" onclick="filterMenu('smoothie')">Sinh tố</button>
                    <button type="button" class="btn btn-outline-warning category-btn mb-2" onclick="filterMenu('dessert')">Bánh ngọt</button>
                </div>

                <div class="btn-group d-none d-md-flex" role="group">
                    <button type="button" class="btn btn-warning category-btn active" onclick="filterMenu('all')">Tất cả</button>
                    <button type="button" class="btn btn-outline-warning category-btn" onclick="filterMenu('coffee')">Cà phê</button>
                    <button type="button" class="btn btn-outline-warning category-btn" onclick="filterMenu('tea')">Trà</button>
                    <button type="button" class="btn btn-outline-warning category-btn" onclick="filterMenu('smoothie')">Sinh tố</button>
                    <button type="button" class="btn btn-outline-warning category-btn" onclick="filterMenu('dessert')">Bánh ngọt</button>
                </div>
            </div>

            <div class="row g-4" id="menuItems">
                <!-- Coffee Items -->
                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="coffee">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1510707577719-ae7c14805e3a?w=300&h=200&fit=crop"
                                 class="card-img-top" alt="Espresso" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Phổ biến</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Espresso</h5>
                            <p class="card-text text-muted small">Cà phê espresso đậm đà, nguyên chất</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </span>
                                <small class="text-muted">(4.8)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">35.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Espresso', 35000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="coffee">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1534778101976-62847782c213?w=300&h=200&fit=crop"
                                 class="card-img-top" alt="Cappuccino" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Phổ biến</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Cappuccino</h5>
                            <p class="card-text text-muted small">Espresso với sữa nóng và bọt sữa mịn</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </span>
                                <small class="text-muted">(4.9)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">45.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Cappuccino', 45000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="coffee">
                    <div class="card h-100 shadow-sm product-card">
                        <img src="https://images.unsplash.com/photo-1461023058943-07fcbe16d735?w=300&h=200&fit=crop"
                             class="card-img-top" alt="Latte" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Latte</h5>
                            <p class="card-text text-muted small">Espresso với nhiều sữa nóng và ít bọt sữa</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </span>
                                <small class="text-muted">(4.7)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">50.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Latte', 50000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="coffee">
                    <div class="card h-100 shadow-sm product-card">
                        <img src="https://images.unsplash.com/photo-1497935586351-b67a49e012bf?w=300&h=200&fit=crop"
                             class="card-img-top" alt="Americano" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Americano</h5>
                            <p class="card-text text-muted small">Espresso pha loãng với nước nóng</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </span>
                                <small class="text-muted">(4.6)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">40.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Americano', 40000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tea Items -->
                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="tea">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1544787219-7f47ccb76574?w=300&h=200&fit=crop"
                                 class="card-img-top" alt="Trà Xanh Matcha" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Phổ biến</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Trà Xanh Matcha</h5>
                            <p class="card-text text-muted small">Trà xanh matcha Nhật Bản cao cấp</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </span>
                                <small class="text-muted">(4.8)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">55.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Trà Xanh Matcha', 55000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="tea">
                    <div class="card h-100 shadow-sm product-card">
                        <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=300&h=200&fit=crop"
                             class="card-img-top" alt="Trà Ô Long" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Trà Ô Long</h5>
                            <p class="card-text text-muted small">Trà ô long thơm ngon, thanh mát</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </span>
                                <small class="text-muted">(4.5)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">45.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Trà Ô Long', 45000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Smoothie Items -->
                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="smoothie">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1553530666-ba11a7da3888?w=300&h=200&fit=crop"
                                 class="card-img-top" alt="Sinh Tố Xoài" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Phổ biến</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Sinh Tố Xoài</h5>
                            <p class="card-text text-muted small">Sinh tố xoài tươi ngon, bổ dưỡng</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </span>
                                <small class="text-muted">(4.7)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">60.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Sinh Tố Xoài', 60000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dessert Items -->
                <div class="col-lg-3 col-md-4 col-sm-6 menu-item" data-category="dessert">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1571877227200-a0d98ea607e9?w=300&h=200&fit=crop"
                                 class="card-img-top" alt="Bánh Tiramisu" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Phổ biến</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Bánh Tiramisu</h5>
                            <p class="card-text text-muted small">Bánh tiramisu Ý truyền thống</p>
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </span>
                                <small class="text-muted">(4.9)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-warning mb-0">65.000đ</span>
                                <button class="btn btn-warning btn-sm" onclick="addToCart('Bánh Tiramisu', 65000)">
                                    <i class="fas fa-plus me-1"></i>Thêm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="py-5" id="about">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h2 class="display-4 fw-bold mb-4">Câu Chuyện Của Chúng Tôi</h2>
                    <p class="lead mb-4">
                        Coffee House được thành lập với niềm đam mê mang đến những ly cà phê chất lượng cao nhất.
                        Chúng tôi tự hào về việc rang xay cà phê tươi mỗi ngày và tạo ra một không gian ấm cúng
                        cho mọi người thưởng thức.
                    </p>
                    <p class="mb-4">
                        Với hơn 10 năm kinh nghiệm, chúng tôi cam kết mang đến trải nghiệm cà phê tuyệt vời nhất
                        cho khách hàng.
                    </p>
                    <button class="btn btn-warning btn-lg" onclick="showMore()">Tìm hiểu thêm</button>
                </div>
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1501339847302-ac426a4a7cbb?w=600&h=400&fit=crop"
                         class="img-fluid rounded shadow" alt="Coffee shop interior">
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5 bg-warning text-white">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <i class="fas fa-coffee fa-3x mb-3"></i>
                    <h3 class="fw-bold">1000+</h3>
                    <p>Ly cà phê mỗi ngày</p>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h3 class="fw-bold">5000+</h3>
                    <p>Khách hàng hài lòng</p>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <i class="fas fa-award fa-3x mb-3"></i>
                    <h3 class="fw-bold">10+</h3>
                    <p>Năm kinh nghiệm</p>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <i class="fas fa-star fa-3x mb-3"></i>
                    <h3 class="fw-bold">4.9</h3>
                    <p>Đánh giá trung bình</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="py-5 bg-light" id="contact">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-4 fw-bold mb-3">Liên Hệ Với Chúng Tôi</h2>
                <p class="lead text-muted">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
            </div>

            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Gửi Tin Nhắn</h5>
                            <form id="contactForm" onsubmit="submitForm(event)">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Họ và tên *</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email *</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Số điện thoại</label>
                                    <input type="tel" class="form-control" id="phone" name="phone">
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Tin nhắn *</label>
                                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-warning w-100">Gửi Tin Nhắn</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Thông Tin Liên Hệ</h5>
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-map-marker-alt text-warning me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Địa chỉ</h6>
                                    <p class="text-muted mb-0">123 Đường Nguyễn Huệ, Quận 1, TP.HCM</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-phone text-warning me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Điện thoại</h6>
                                    <p class="text-muted mb-0">(028) 1234 5678</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-envelope text-warning me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Email</h6>
                                    <p class="text-muted mb-0">info@coffeehouse.vn</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start">
                                <i class="fas fa-clock text-warning me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1">Giờ mở cửa</h6>
                                    <p class="text-muted mb-0">6:00 - 22:00 (Hàng ngày)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
  
   
    <script src="@Url.Content("~/myjs/customer.js")"></script>

</body>
</html>