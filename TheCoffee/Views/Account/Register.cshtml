@model TheCoffee.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="border p-4 bg-white rounded shadow-sm">
                    <h4 class="mb-4 text-center">Đăng ký tài khoản</h4>

                    @if (ViewBag.RegOk != null)
                    {
                        <div class="alert alert-success">@ViewBag.RegOk</div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FullName)
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Phone)
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type = "tel" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                    }

                    <p class="text-center mt-3">
                        Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
