@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Đổi mật khẩu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="col-md-6 mx-auto card p-4 shadow-sm">
            <h4 class="mb-3 text-center">Đổi mật khẩu</h4>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }

            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label>Mật khẩu cũ</label>
                    <input type="password" name="oldPass" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Mật khẩu mới</label>
                    <input type="password" name="newPass" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Xác nhận mật khẩu</label>
                    <input type="password" name="confirmPass" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Đổi mật khẩu</button>
            }

            <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary mt-3 w-100">Quay lại hồ sơ</a>
        </div>
    </div>
</body>
</html>
