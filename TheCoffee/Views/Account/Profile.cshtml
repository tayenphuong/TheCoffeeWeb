@model TheCoffee.Models.User
@{
    Layout = null;
    ViewBag.Title = "Hồ sơ cá nhân";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hồ sơ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow">
                    <h4 class="text-center mb-4">Hồ sơ người dùng</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Họ tên</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Tên đăng nhập</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">SĐT</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Vai trò</dt>
                        <dd class="col-sm-8">
                            @(Model.RoleID == 1 ? "Quản trị viên" : "Khách hàng")
                        </dd>
                    </dl>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("EditProfile", "Account")" class="btn btn-outline-primary me-2"> Chỉnh sửa hồ sơ</a>
                        <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-outline-warning"> Đổi mật khẩu</a>
                    </div>
                    <div class="text-center mt-3">
                        @*<a href="@Url.Action("Index", Model.RoleID == 1 ? "AdminHome" : "CusHome", new { area = Model.RoleID == 1 ? "Admin" : "" })" class="btn btn-secondary">← Quay lại</a>*@
                        <a href="@Url.Action(
                            Model.RoleID == 1 ? "AdminHome" : "CusHome", // action
                            Model.RoleID == 1 ? "AdminHome" : "Home",  // controller
                            new { area = Model.RoleID == 1 ? "Admin" : "" } // area
                        )" class="btn btn-secondary"> Quay lại</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
