<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffee House - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/chart.js@4.0.0/dist/chart.min.css" rel="stylesheet">
    <link href="~/Content/mycss/admin.css" rel="stylesheet" />
    
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="~/Admin/AdminHome/AdminHome" class="logo">
                <i class="fas fa-coffee"></i>
                <span>Coffee Admin</span>
            </a>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a href="~/Admin/AdminHome/AdminHome" class="menu-link active" data-section="dashboard">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="~/Admin/Products/Index" class="menu-link" data-section="products">
                    <i class="fas fa-coffee"></i>
                    <span>Sản phẩm</span>
                </a>
            </li>
            <li>
                <a href="~/Admin/AdminOrder/Index" class="menu-link" data-section="orders">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Đơn hàng</span>
                </a>
            </li>
            <li>
                <a href="~/Admin/AdminUser/Index" class="menu-link" data-section="users">
                    <i class="fas fa-users"></i>
                    <span>Người dùng</span>
                </a>
            </li>
            <li>
                <a href="~/Admin/Categories/Index" class="menu-link" data-section="categories">
                    <i class="fas fa-tags"></i>
                    <span>Danh mục</span>
                </a>
            </li>
            <li>
                <a href="#reports" class="menu-link" data-section="reports">
                    <i class="fas fa-chart-bar"></i>
                    <span>Báo cáo</span>
                </a>
            </li>
            <li>
                <a href="#settings" class="menu-link" data-section="settings">
                    <i class="fas fa-cog"></i>
                    <span>Cài đặt</span>
                </a>
            </li>
        </ul>
    </div>


    <!-- Main content wrapper -->
    <div class="main-content" id="main-content">
        <!-- Top Navigation -->
        <div class="top-nav">
            <div class="d-flex align-items-center">
                <button class="toggle-sidebar" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h4 class="mb-0 ms-3" id="pageTitle">Dashboard</h4>
            </div>

            <div class="d-flex align-items-center">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle me-2"></i>Admin
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Profile", "Account", new { area = "" })"><i class="fas fa-user me-2"></i> Hồ sơ</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Cài đặt</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Account", new { area = "" })"><i class="fas fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </div>


        <!-- Page Content -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Scripts/admin.js")"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
