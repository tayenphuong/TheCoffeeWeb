
@{
    ViewBag.Title = "AdminHome";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffee House - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/chart.js@4.0.0/dist/chart.min.css" rel="stylesheet">
    <link href="~/Content/mycss/admin.css" rel="stylesheet" />
  

</head>
<body>


    <!-- Main Content -->
    <div class="main-content" id="mainContent">


        <!-- Dashboard Section -->
        <div class="content-section" id="dashboard-section">
            <div class="container-fluid p-4">
                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card revenue">
                            <div class="icon">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <h3 class="mb-1">125.5M VND</h3>
                            <p class="text-muted mb-0">Doanh thu tháng</p>
                            <small class="text-success">
                                <i class="fas fa-arrow-up"></i> +12.5%
                            </small>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card orders">
                            <div class="icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <h3 class="mb-1">1,234</h3>
                            <p class="text-muted mb-0">Đơn hàng</p>
                            <small class="text-success">
                                <i class="fas fa-arrow-up"></i> +8.2%
                            </small>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card products">
                            <div class="icon">
                                <i class="fas fa-coffee"></i>
                            </div>
                            <h3 class="mb-1">156</h3>
                            <p class="text-muted mb-0">Sản phẩm</p>
                            <small class="text-info">
                                <i class="fas fa-plus"></i> +5 mới
                            </small>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card customers">
                            <div class="icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h3 class="mb-1">2,847</h3>
                            <p class="text-muted mb-0">Khách hàng</p>
                            <small class="text-success">
                                <i class="fas fa-arrow-up"></i> +15.3%
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="row mb-4">
                    <div class="col-lg-8 mb-3">
                        <div class="chart-container">
                            <h5 class="mb-3">Doanh thu theo tháng</h5>
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>

                    <div class="col-lg-4 mb-3">
                        <div class="chart-container">
                            <h5 class="mb-3">Sản phẩm bán chạy</h5>
                            <canvas id="productChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div class="table-container">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Đơn hàng gần đây</h5>
                        <a href="#orders" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Khách hàng</th>
                                    <th>Sản phẩm</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Thời gian</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#1001</td>
                                    <td>Nguyễn Văn A</td>
                                    <td>Cappuccino, Latte</td>
                                    <td>95.000đ</td>
                                    <td><span class="badge-status badge-completed">Hoàn thành</span></td>
                                    <td>10:30 AM</td>
                                </tr>
                                <tr>
                                    <td>#1002</td>
                                    <td>Trần Thị B</td>
                                    <td>Espresso</td>
                                    <td>35.000đ</td>
                                    <td><span class="badge-status badge-pending">Đang xử lý</span></td>
                                    <td>10:25 AM</td>
                                </tr>
                                <tr>
                                    <td>#1003</td>
                                    <td>Lê Văn C</td>
                                    <td>Americano, Bánh Tiramisu</td>
                                    <td>105.000đ</td>
                                    <td><span class="badge-status badge-completed">Hoàn thành</span></td>
                                    <td>10:20 AM</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Section -->
        <div class="content-section d-none" id="products-section">
            <div class="container-fluid p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4>Quản lý sản phẩm</h4>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productModal">
                        <i class="fas fa-plus me-2"></i>Thêm sản phẩm
                    </button>
                </div>

                <!-- Filters -->
                <div class="table-container mb-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm..." id="searchProduct">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="categoryFilter">
                                <option value="">Tất cả danh mục</option>
                                <option value="coffee">Cà phê</option>
                                <option value="tea">Trà</option>
                                <option value="smoothie">Sinh tố</option>
                                <option value="dessert">Bánh ngọt</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tất cả trạng thái</option>
                                <option value="active">Đang bán</option>
                                <option value="inactive">Ngừng bán</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">
                                <i class="fas fa-refresh me-2"></i>Reset
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Products Table -->
                <div class="table-container">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Giá</th>
                                    <th>Trạng thái</th>
                                    <th>Đánh giá</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="productsTableBody">
                                <tr>
                                    <td>
                                        <img src="https://images.unsplash.com/photo-1510707577719-ae7c14805e3a?w=50&h=50&fit=crop"
                                             class="rounded" width="50" height="50" alt="Espresso">
                                    </td>
                                    <td>
                                        <strong>Espresso</strong>
                                        <br><small class="text-muted">Cà phê espresso đậm đà</small>
                                    </td>
                                    <td><span class="badge bg-warning text-dark">Cà phê</span></td>
                                    <td><strong>35.000đ</strong></td>
                                    <td><span class="badge bg-success">Đang bán</span></td>
                                    <td>
                                        <span class="text-warning">
                                            <i class="fas fa-star"></i> 4.8
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1" onclick="editProduct(1)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteProduct(1)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <img src="https://images.unsplash.com/photo-1534778101976-62847782c213?w=50&h=50&fit=crop"
                                             class="rounded" width="50" height="50" alt="Cappuccino">
                                    </td>
                                    <td>
                                        <strong>Cappuccino</strong>
                                        <br><small class="text-muted">Espresso với sữa nóng</small>
                                    </td>
                                    <td><span class="badge bg-warning text-dark">Cà phê</span></td>
                                    <td><strong>45.000đ</strong></td>
                                    <td><span class="badge bg-success">Đang bán</span></td>
                                    <td>
                                        <span class="text-warning">
                                            <i class="fas fa-star"></i> 4.9
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1" onclick="editProduct(2)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteProduct(2)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Trước</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">Sau</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Orders Section -->
        <div class="content-section d-none" id="orders-section">
            <div class="container-fluid p-4">
                <h4 class="mb-4">Quản lý đơn hàng</h4>

                <!-- Order Stats -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="stat-card">
                            <h5 class="text-primary">Chờ xử lý</h5>
                            <h3>23</h3>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card">
                            <h5 class="text-warning">Đang làm</h5>
                            <h3>15</h3>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card">
                            <h5 class="text-success">Hoàn thành</h5>
                            <h3>156</h3>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card">
                            <h5 class="text-danger">Đã hủy</h5>
                            <h3>8</h3>
                        </div>
                    </div>
                </div>

                <!-- Orders Table -->
                <div class="table-container">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex gap-2">
                            <select class="form-select" style="width: auto;">
                                <option>Tất cả trạng thái</option>
                                <option>Chờ xử lý</option>
                                <option>Đang làm</option>
                                <option>Hoàn thành</option>
                                <option>Đã hủy</option>
                            </select>
                            <input type="date" class="form-control" style="width: auto;">
                        </div>
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-download me-2"></i>Xuất Excel
                        </button>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Khách hàng</th>
                                    <th>Sản phẩm</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Thời gian</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>#1001</strong></td>
                                    <td>
                                        <div>
                                            <strong>Nguyễn Văn A</strong>
                                            <br><small class="text-muted">0901234567</small>
                                        </div>
                                    </td>
                                    <td>
                                        <small>
                                            2x Cappuccino<br>
                                            1x Latte
                                        </small>
                                    </td>
                                    <td><strong>95.000đ</strong></td>
                                    <td><span class="badge-status badge-completed">Hoàn thành</span></td>
                                    <td>
                                        <div>10:30 AM</div>
                                        <small class="text-muted">28/06/2024</small>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewOrder(1001)">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>#1002</strong></td>
                                    <td>
                                        <div>
                                            <strong>Trần Thị B</strong>
                                            <br><small class="text-muted">0907654321</small>
                                        </div>
                                    </td>
                                    <td>
                                        <small>
                                            1x Espresso
                                        </small>
                                    </td>
                                    <td><strong>35.000đ</strong></td>
                                    <td><span class="badge-status badge-pending">Đang xử lý</span></td>
                                    <td>
                                        <div>10:25 AM</div>
                                        <small class="text-muted">28/06/2024</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-success" onclick="updateOrderStatus(1002, 'completed')">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" onclick="updateOrderStatus(1002, 'cancelled')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Other sections would be similar... -->
        <div class="content-section d-none" id="customers-section">
            <div class="container-fluid p-4">
                <h4>Quản lý khách hàng</h4>
                <p class="text-muted">Tính năng đang phát triển...</p>
            </div>
        </div>

        <div class="content-section d-none" id="categories-section">
            <div class="container-fluid p-4">
                <h4>Quản lý danh mục</h4>
                <p class="text-muted">Tính năng đang phát triển...</p>
            </div>
        </div>

        <div class="content-section d-none" id="reports-section">
            <div class="container-fluid p-4">
                <h4>Báo cáo</h4>
                <p class="text-muted">Tính năng đang phát triển...</p>
            </div>
        </div>

        <div class="content-section d-none" id="settings-section">
            <div class="container-fluid p-4">
                <h4>Cài đặt</h4>
                <p class="text-muted">Tính năng đang phát triển...</p>
            </div><a href="~/Models/Order.cs">~/Models/Order.cs</a>
        </div>
    </div>

    <!-- Product Modal -->
    <div class="modal fade" id="productModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm sản phẩm mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="productForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm *</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Danh mục *</label>
                                    <select class="form-select" name="category" required>
                                        <option value="">Chọn danh mục</option>
                                        <option value="coffee">Cà phê</option>
                                        <option value="tea">Trà</option>
                                        <option value="smoothie">Sinh tố</option>
                                        <option value="dessert">Bánh ngọt</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Giá (VND) *</label>
                                    <input type="number" class="form-control" name="price" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select class="form-select" name="status">
                                        <option value="active">Đang bán</option>
                                        <option value="inactive">Ngừng bán</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mô tả</label>
                                    <textarea class="form-control" name="description" rows="4"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Hình ảnh</label>
                                    <div class="image-upload" onclick="document.getElementById('imageInput').click()">
                                        <i class="fas fa-cloud-upload-alt fa-2x text-muted mb-2"></i>
                                        <p class="text-muted">Click để tải ảnh lên</p>
                                        <input type="file" id="imageInput" name="image" accept="image/*" style="display: none;" onchange="previewImage(this)">
                                    </div>
                                    <img id="imagePreview" class="image-preview d-none" alt="Preview">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary" onclick="saveProduct()">
                        <span class="loading d-none"></span>
                        Lưu sản phẩm
                    </button>
                </div>
            </div>
        </div>
    </div>
    

</body>
</html>
