@model TheCoffee.Models.Category

@{
    ViewBag.Title = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-plus-circle me-2"></i>Thêm danh mục</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", placeholder = "Nhập tên danh mục" })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> Lưu
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            }
        </div>
    </div>
</div>
