@model TheCoffee.Models.Category

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-tag me-2"></i>Chi tiết danh mục</h4>
            <a href="@Url.Action("Index")" class="btn btn-sm btn-light">
                <i class="fas fa-arrow-left"></i> Trở về
            </a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("Edit", new { id = Model.CategoryID })" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>
</div>

